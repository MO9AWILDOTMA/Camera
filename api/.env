# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/camera
DB_USERNAME=postgres
DB_PASSWORD=password

# Hibernate & JPA Configuration
HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect
HIBERNATE_DDL_AUTO=update

# File Upload Configuration
MAX_FILE_SIZE=50MB
MAX_REQUEST_SIZE=50MB
APP_MAX_FILE_SIZE=10485760
MOVIE_UPLOAD_DIR=src/main/resources/static/images/movies
STATIC_LOCATION=file:uploads/

# Spring Security User
SPRING_SECURITY_USER_PASSWORD=password

# JWT Configuration
JWT_HEADER_STRING=Cookie
JWT_SIGNING_
JWT_AUTHORITIES_KEY=roles
JWT_TOKEN_VALIDITY=3600000

# Logging Configuration
LOGGING_LEVEL_SECURITY=DEBUG
LOGGING_LEVEL_SPRINGFRAMEWORK=DEBUG

# Payment Configuration (Replace with actual keys)
YOUCANPAY_PUBLIC_KEY=your-public-key
YOUCANPAY_PRIVATE_KEY=your-private-key
